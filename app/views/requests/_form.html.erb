            <%= f.label :address %>:
            <%= f.text_field :address, class: 'forminput' %>
          </div>
        </div>
        <div class="row">
          <div class="field col-xs-4">
            <%= f.label :city %>:
            <%= f.text_field :city, class: 'forminput' %>
